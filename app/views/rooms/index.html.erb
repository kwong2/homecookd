<div class="row">
	<div class="col-md-3">
		<ul class="sidebar-list">
			<li class="sidebar-item"><%= link_to "Your Meals", rooms_path, class: "sidebar-link active" %></li>
			<li class="sidebar-item"><%= link_to "Your Reservations", your_reservations_path, class: "sidebar-link" %></li>
			<li class="sidebar-item"><%= link_to "Your Upcoming Meals", your_trips_path, class: "sidebar-link" %></li>
		</ul>
	</div>
	<div class="col-md-9">
		<div class="panel panel-default">
			<div class="panel-heading">
				Your Meals
			</div>
			<div class="panel-body">
				<% @rooms.each do |room| %>
					<div id="roomindexrow" class="row">
						<div id="roomindeximg" class="col-md-2">
							<%= link_to room_path(room) do %>
								<%= image_tag room.photos.first.image %>
							<% end %>
						</div>		
						<div id="listtitle" class="col-md-7">
							<h4><%= room.listing_name %></h4>
						</div>		
						<div id="roomsdestroy" class="col-md-3 right">
							<%= link_to "Delete Meal", room_reservations_path(room), class: "btn btn-primary" %>
						</div>		
			   	<div class="row divide"><hr id="roomsindexdivider"></div>
					</div>
				<% end %>

			</div>
		</div>
	</div>
</div>