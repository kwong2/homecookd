<div class="row">
	<div class="col-md-3">
		<ul class="sidebar-list">
			<li class="sidebar-item"><%= link_to "Your Meals", rooms_path, class: "sidebar-link" %></li>
			<li class="sidebar-item"><%= link_to "Your Reservations", your_reservations_path, class: "sidebar-link active" %></li>
			<li class="sidebar-item"><%= link_to "Your Upcoming Meals", your_trips_path, class: "sidebar-link" %></li>
		</ul>
	</div>
	<div class="col-md-9">
		<div class="panel panel-default">
			<div class="panel-heading">
				Your Reservations
			</div>
			<div class="panel-body">
				<% @rooms.each do |room| %>
					<% room.reservations.each do |reservation| %>

						<div id="resindexrow" class="row">
							<div id="resertime" class="col-md-2">
								<%= reservation.start_date.strftime("%D") %>

							</div>	
							<div id="thumbnailresi" class="col-md-4">
								<%= link_to room_path(reservation.room) do %>
									<%= image_tag room.photos.first.image %>
								<% end %>
							</div>	
							<div id="useravatarres" class="col-md-2">
								<%= link_to user_path(reservation.user) do %>
									<%= image_tag avatar_url(reservation.user), class: "img-circle avatar-medium" %>
								<% end %>	
							</div>	
							<div id="reserprice" class="col-md-2 right">
								<h4>$<%= reservation.price %></h4>
							</div>	
							<div class="col-md-2">
							 <button id="zipsub" type="button" class="btn btn-primary btn-sm">Delete<br>Reservation</button>
							
							</div>
						</div>
						<hr>
					<% end %>

				<% end %>

			</div>
		</div>
	</div>
</div>