<div class="row">
	<div class="col-md-3">
		<ul class="sidebar-list">
			<li class="sidebar-item"><%= link_to "Meals You're Serving", rooms_path, class: "sidebar-link" %></li>
			<li class="sidebar-item"><%= link_to "Your Reservations", your_reservations_path, class: "sidebar-link" %></li>
			<li class="sidebar-item"><%= link_to "Your Upcoming Meals", your_trips_path, class: "sidebar-link active" %></li>
		</ul>
	</div>
	<div class="col-md-9">
		<div class="panel panel-default">
			<div class="panel-heading">
				Your Upcoming Meals
			</div>
			<div class="panel-body">
				
				<% @trips.each do |trip| %>

					<div id="tripsindexrow" class="row">
						<div id="mealstarttime"  class="col-md-2">
							<%= trip.start_date.strftime('%D') %>

						</div>	
						<div id="tripsimg" class="col-md-6">
							<%= link_to room_path(trip.room) do %>
							<%= image_tag trip.room.photos.first.image %>
							<% end %>
						</div>	
						<div id="useravatrips" class="col-md-2">
							<%= link_to user_path(trip.room.user) do %>
								<%= image_tag avatar_url(trip.room.user), class: "img-circle avatar-medium" %>
							<% end %>	
						</div>	
						<div id="mealprice" class="col-md-2 right">
							<h4>$<%= trip.price %></h4>
						</div>	
					</div>
					<hr>
				<% end %>

			</div>
		</div>
	</div>
</div>